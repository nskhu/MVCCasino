@{
    ViewData["Title"] = "Payment View";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/payment.css" />
</head>
<body>

<div class="payment-container">
    <p>Transaction ID: @ViewData["TransactionId"]</p>
    <p>Amount: @ViewData["Amount"]</p>

    <input class="payment-input" type="text" placeholder="Full Name" />
    <input class="payment-input" type="text" placeholder="Card Number" />

    <button class="payment-button">Pay</button>
    <button class="payment-button">Cancel</button>
</div>

</body>
</html>
